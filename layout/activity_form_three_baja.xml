<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"

    android:configChanges="orientation|screenSize"
    tools:context=".FormThreeBajaActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textViewDriver2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="420dp"
        android:layout_height="50dp"


        android:layout_marginStart="159dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:text="2nd Driver"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewDriver2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <ScrollView
        android:id="@+id/scrollViewDriver2"
        android:layout_width="match_parent"
        android:layout_height="594dp"
        android:layout_marginTop="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textAllCaps="false">


            <com.google.android.material.textfield.TextInputLayout

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/teamNameDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="51dp"
                    android:hint="Team Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="247dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/firstNameDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First(Given) Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="2"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="325dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/familyNameDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Family Name" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="414dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dateofBirthDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="4"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="513dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nationalityDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nationality" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/genderDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/passportDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Passport Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/issuingdateDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Issuing Date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ExpiryDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expiry Date" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="9"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/postalDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Postal Address For Correspondance" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="10"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/fianumberDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="FIA Licence Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="11"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/issuingasnDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Issuing ASN Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="12"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telephonenumberDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Telephone Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="13"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobilenumberDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Telephone Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="14"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/emailaddreesDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email Address" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="15"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/nextofkinDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Next of Kin" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="16"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/relationshipDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Relationship" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="17"
                android:layout_column="0"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="613dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeColor="@color/colorPrimary">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/telnumberDriver2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tel. Number" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/signatureDriver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="18"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                android:text="Signature" />


            <ImageView
                android:id="@+id/imagesignatureDriver2"
                android:layout_width="125dp"
                android:layout_height="82dp"
                android:adjustViewBounds="false"
                android:visibility="invisible"
                android:layout_row="19"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/attachLicenceDriver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="20"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                android:text="Attach Licence" />

            <ImageView
                android:id="@+id/attachedviewLicenceDriver2"
                android:layout_width="125dp"
                android:layout_height="82dp"
                android:adjustViewBounds="false"
                android:visibility="invisible"
                android:layout_row="21"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/attachIDDriver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="22"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                android:text="Attach ID" />


            <ImageView
                android:id="@+id/attachviewIDDriver2"
                android:layout_width="125dp"
                android:layout_height="82dp"
                android:adjustViewBounds="false"
                android:visibility="invisible"
                android:layout_row="23"
                android:layout_column="0"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_launcher_round" />

            <Button
                android:id="@+id/nextbtnDriver2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_row="24"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:background="@drawable/round_button"
                android:layout_gravity="center"
                android:text="Next" />

        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>